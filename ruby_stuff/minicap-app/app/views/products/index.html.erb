<header role=header>
  
  <h1>WATCHES</h1>
 
</header>

<main role="main">
<div class="col-md-9 container">
  <div class="row">
    <% @products.each do |product| %>
    <div class="col-md-6">
      <div class="thumbnail">
        <img src="<%= product.image %>" width="150px" alt="...">
        <div class="caption">
          <h3><a href="/products/<%= product.id %>"><%= product.title %></a></h3>
          <h3><%= number_to_currency(product.price) %></h3>
          <p><a href="/products/<%= product.id %>" class="btn btn-primary" role="button">Buy</a> <a href="/products/<%= product.id %>/edit" class="btn btn-default" role="button">Edit</a></p> 
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
</main>


<section role="section">
<div class="col-md-3 sidebar" >
  <h4><a href="/products?sort=price">Price Low to High</a></h4>
  <h4><a href="/products?sort=price_hi">Price High to Low</a></h4>
  <p><a href="/products?filter=discount">Discount items</a></p>
  <p><a href="/products/random">Random</a></p>

</div>
</section>


