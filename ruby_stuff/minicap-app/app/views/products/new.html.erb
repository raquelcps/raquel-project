<h1>Add a product</h1>

<%= form_tag '/products' do%>

<%= label_tag :title %>
<%= text_field_tag :title %>

<%= label_tag :brand %>
<%= text_field_tag :brand %>

<%= label_tag :price %>
<%= text_field_tag :price %>

<%= label_tag :description%>
<%= text_field_tag :description %>

<%= label_tag :category %>
<%= text_field_tag :category %>

<%= label_tag :image %>
<%= text_field_tag :image %>

<%= label_tag :vendor %>
<%= text_field_tag :vendor %>

<%= submit_tag 'Submit Product' %>

<% end %>